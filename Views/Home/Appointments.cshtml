@model IEnumerable<TempleTours.Models.Tour>

<div>
    <div class="container">
        <div class="row justify-content-md-center">

            @foreach (var tour in Model)
            {
                <!--This is to start the card for an appointment-->
                <div class="col-sm-3 m-4">
                    <div class="card p-3 rounded shadow mb-3 bg-light" style="width: 20rem;">

                        <!--Add the tour time for each tour-->
                        <div class="card-title text-black text-center mt-2 mb-0">
                            <h2>@tour.TourTime</h2>
                        </div>

                        <!--Add specific info from each party-->
                        @foreach (var party in tour.Parties)
                            {
                                <partial name="AppointmentInfo" model="party" />
                            }

                    </div>
                </div>
            }
        </div>
    </div>

</div>

