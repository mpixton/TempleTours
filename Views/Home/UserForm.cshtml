

@model SignUpViewModel

<div class="container text-center">
    <form asp-action="UserForm" method="post" class="mx-auto">
        <input type="hidden" asp-for="Tour.TourId" />
        <table class="table shadow">
            <thead>
                <tr>
                    <th>
                        <label asp-for="Party.FirstName" class="text-right">First Name:</label>
                    </th>
                    <th>
                        <label asp-for="Party.LastName" class="text-right">Last Name:</label>
                    </th>
                    <th>
                        <label asp-for="Party.EmailAddress" class="text-right">Email:</label>
                    </th>
                    <th>
                        <label asp-for="Party.PhoneNumber" class="text-right">Phone:</label>
                    </th>
                    <th>
                        <label asp-for="Party.PartySize" class="text-right">Size of Group Attending:</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input asp-for="Party.FirstName" />
                    </td>
                    <td>
                        <input asp-for="Party.LastName" />
                    </td>
                    <td>
                        <input asp-for="Party.EmailAddress" />
                    </td>
                    <td>
                        <input asp-for="Party.PhoneNumber" />
                    </td>
                    <td>
                        <input asp-for="Party.PartySize" />
                    </td>
                </tr>
            </tbody>
        </table>
        <br /><br />

        <button type="submit" class="btn btn-lg btn-primary shadow">Confirm Sign Up</button>
        <div asp-validation-summary="All"></div>


    </form>
</div>